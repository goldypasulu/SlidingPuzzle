<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputNameActivity">

    <EditText
        android:id="@+id/etInputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input your name"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"/>

    <Button
        android:id="@+id/btnInputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@+id/etInputName"
        app:layout_constraintEnd_toEndOf="@+id/etInputName"
        app:layout_constraintStart_toStartOf="@id/etInputName"
        />

    <Button
        android:id="@+id/btnLeadeboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Pemain"
        app:layout_constraintTop_toBottomOf="@+id/btnInputName"
        app:layout_constraintEnd_toEndOf="@+id/etInputName"
        app:layout_constraintStart_toStartOf="@id/etInputName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>